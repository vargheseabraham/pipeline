pipeline {
    agent any 
    stages {
        stage('Preparation') {
            steps {
                echo 'Jenkinsfile Pipeline - Preparation Phase..!' 
            }
        }
        stage('Build') {
            steps {
                echo 'Jenkinsfile Pipeline - Build Phase..!' 
            }
        }
        stage('Test') {
            steps {
                echo 'Jenkinsfile Pipeline - Test Phase..!' 
            }
        }
        stage('Deployment') {
            steps {
                echo 'Jenkinsfile Pipeline - Deployment Phase..!' 
            }
        }       
    }
}
